{
  "name": "fibreflow-react",
  "version": "1.0.0",
  "description": "FibreFlow React Migration - Modern React application migrated from Angular",
  "type": "module",
  "main": "src/index.tsx",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:smoke": "playwright test --grep @smoke",
    "test:e2e:visual": "playwright test --grep @visual",
    "test:e2e:mobile": "playwright test --grep @mobile",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:setup": "tsx scripts/setupNeonDatabase.ts setup",
    "db:seed": "tsx scripts/setupNeonDatabase.ts seed",
    "db:validate": "tsx scripts/setupNeonDatabase.ts validate"
  },
  "keywords": [
    "react",
    "typescript",
    "fibreflow",
    "migration",
    "vite"
  ],
  "author": "FibreFlow Team",
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@hookform/resolvers": "^3.3.0",
    "@mui/icons-material": "^7.3.1",
    "@mui/material": "^7.3.1",
    "@neondatabase/mcp-server-neon": "^0.6.3",
    "@neondatabase/serverless": "^1.0.1",
    "@tanstack/react-query": "^5.85.5",
    "@types/xlsx": "^0.0.35",
    "axios": "^1.5.0",
    "clsx": "^2.1.1",
    "date-fns": "^2.30.0",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.4",
    "firebase": "^12.1.0",
    "lucide-react": "^0.279.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.45.0",
    "react-hot-toast": "^2.6.0",
    "react-router-dom": "^6.15.0",
    "recharts": "^3.1.2",
    "tailwind-merge": "^3.3.1",
    "xlsx": "^0.18.5",
    "zod": "^3.22.0",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-v8": "^0.34.0",
    "@vitest/ui": "^0.34.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.48.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.0",
    "jsdom": "^22.1.0",
    "playwright": "^1.55.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.4",
    "typescript": "^5.2.0",
    "vite": "^4.4.0",
    "vite-plugin-pwa": "^1.0.3",
    "vitest": "^0.34.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
