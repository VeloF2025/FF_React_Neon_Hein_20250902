{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "DATABASE_URL": "@database_url",
    "VITE_DATABASE_URL": "@database_url"
  },
  "functions": {
    "api/**/*.js": {
      "maxDuration": 10
    }
  }
}